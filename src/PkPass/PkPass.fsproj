    <Compile Include="Attributes.fs" />
    <Compile Include="Interop\FileSystemFileHandle.fs" />
    <Compile Include="Interop\LocalStorage.fs" />
    <Compile Include="Interop\JsEnumerable.fs" />
    <Compile Include="Interop\JsConsole.fs" />
